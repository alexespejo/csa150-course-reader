---
import ChapterSideBar from "../utils/ChapterSideBar.astro";
import SectionAside from "../utils/SectionAside.vue";
import TopNavbar from "../utils/TopNavbar.vue";
// import NavigatorButtons from "../components/NavigatorButtons.vue";
// import Breadcrumbs from "../components/Breadcrumbs.vue";
import "../styles/global.scss";
export interface Props {
 title: string;
 dir: string;
 displayLayout: boolean;
 chapterSubSections: string[];
 //  prev: any;
 //  next: any;
}
// const { title, dir, prev, next, uselayout } = Astro.props;

const { title, displayLayout, chapterSubSections } = Astro.props;
---

<script>
 const buttons = document.querySelectorAll("button.alert");

 // Handle clicks on each button.
 buttons.forEach((button) => {
  button.addEventListener("click", () => {
   alert("Button was clicked!");
  });
 });
</script>
<html lang="en">
 <head>
  <meta charset="UTF-8" />
  <meta name="description" content="Astro description" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="generator" content={Astro.generator} />
  <title>{title}</title>
 </head>
 <body>
  {
   displayLayout ? (
    <div class="flex w-screen h-screen">
     <nav class="bg-slate-300 hidden md:flex md:w-1/4 lg:w-1/5">
      <ChapterSideBar />
     </nav>
     <div class="h-full w-full md:w-3/4 lg:w-5/6 relative">
      <nav class="w-100 sticky top-0" id="top-navbar">
       <TopNavbar />
      </nav>
      <div class="flex  relative" id="main-content">
       <main class="px-3 sm:p-5 h-full w-full xl:w-5/6 xl:w-4/5 overflow-auto">
        <section class="flex flex-col space-y-10" id="main-body">
         <slot />{" "}
        </section>
       </main>
       <aside class="hidden xl:block w-1/6 xl:w-1/5 h-full sticky top-0 border-l-2 border-slate-300">
        <SectionAside sections={chapterSubSections} />
       </aside>
      </div>
     </div>
    </div>
   ) : (
    <div class="border-b-2 border-b-slate-300 pb-28">
     <slot />
    </div>
   )
  }
 </body>
</html>

<style lang="scss">
 #main-content {
  height: 90%;
 }
 #main-body {
 }
 #top-navbar {
  height: 10%;
 }
</style>
